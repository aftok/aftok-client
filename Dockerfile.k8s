# Dockerfile for Aftok PureScript client (Kubernetes deployment)
FROM node:22-slim AS builder

WORKDIR /app

# Install system dependencies that might be needed
RUN apt-get update && apt-get install -y \
    ca-certificates \
    git \
    && rm -rf /var/lib/apt/lists/*

# Copy package files
COPY package*.json ./

# Install dependencies
RUN npm ci

# Copy PureScript config and source
COPY spago.yaml ./
COPY src/ ./src/
COPY dev/ ./dev/
COPY aftok.com/ ./aftok.com/

# Create assets symlink
RUN ln -sf ../aftok.com/src/assets ./dev/assets

# Build the application
RUN npm run build-parcel

# Final stage - just the built application
FROM alpine:latest

# Install basic tools
RUN apk add --no-cache ca-certificates

# Create directory for app files
RUN mkdir -p /app/dist

# Copy built app from builder stage
COPY --from=builder /app/dist /app/dist

# Create non-root user
RUN addgroup -g 1000 aftok && \
    adduser -D -s /bin/sh -u 1000 -G aftok aftok

# Change ownership
RUN chown -R aftok:aftok /app

USER aftok

# Default command (not really used, init container will copy files)
CMD ["sh", "-c", "echo 'Aftok client app ready'"]